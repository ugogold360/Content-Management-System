<h1> Create Posts</h1>

{{#each errors}}
	<div class="alert alert-danger">

		{{message}}
	</div>

{{/each}}

<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
	
	<div class="form-group">
		<label for="title"> Title</label>
		<input name="title" type="text" class="form-control" id="title" placeholder="Enter Title">
	</div>

	<div class="form-group">
		<label for="File"> Upload Image</label>
		<input name="file" type="file" id="file">
	</div>

	<div class="form-group">
		<label for="status"> Status</label>

		<select name="status" id="status" class="form-control">

		<option value="public"> Public </option>

		<option value="private"> Private </option>

		<option value="draft"> Draft </option>

		</select>
	</div>


	<div class="form-check">
		<label for="allowComments" class="form-check-label"> 
		<input name="allowComments" type="checkbox" class="form-check-input" id="allowComments" >

		Allow Comments
		 </label>
	</div>

	<div class="form-group">
		<label for="body"> Enter Description</label>
		<textarea name="body" type="text" class="form-control" id="body" placeholder="Enter Description"></textarea>
	</div>
	<button type="submit" class="btn btn-primary"> Create Post </button>
</form>