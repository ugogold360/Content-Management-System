<h1> Edit Posts</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">
	
	<div class="form-group">
		<label for="title"> Title</label>
		<input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
	</div>

	<div class="form-group">
		<label for="File"> Upload Image</label>
		<input name="file" type="file" id="file">
	</div>

	<div class="form-group">
		<label for="status"> Status</label>

		<select name="status" id="status" class="form-control">
{{#select post.status}}
		<option value="public"> Public </option>

		<option value="private"> Private </option>

		<option value="draft"> Draft </option>

{{/select}}
		</select>
	</div>


	<div class="form-check">
		<label for="allowComments" class="form-check-label"> 
		<input name="allowComments" type="checkbox" class="form-check-input" id="allowComments" {{#if post.allowComments}} checked {{/if}}>

		Allow Comments
		 </label>
	</div>

	<div class="form-group">
		<label for="body"> Description </label>

		<textarea name="body" cols="30" rows="30" class="form-control" id="body" value="nothing">{{post.body}}
		</textarea>

	</div>
	<button type="submit" class="btn btn-primary"> Edit Post</button>
</form>